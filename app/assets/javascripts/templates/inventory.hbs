<h1>{{name}}</h1>

<button {{action "removeInventory"}} class="destroy">Delete</button>

<br><br>

<h2>Goods</h2>

<table border='1'>
  <tr>
    <th>Material</th>
    <th>Type</th>
    <th>Grade</th>
    <th>Gauge</th>
    <th>Diameter</th>
    <th>Length</th>
    <th>Finish</th>
    <th>Comment</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  {{#each good in goods}}
    <tr {{bind-attr id='good.elementId'}}>
      <th class='material-cell'>{{good.material}}</th>
      <th>{{good.metal_type}}</th>
      <th>{{good.grade}}</th>
      <th>{{#if good.gauge}} {{good.gauge}} {{/if}}</th>
      <th>{{#if good.diameter}} {{good.diameter}} {{/if}}</th>
      <th>{{#if good.length}} {{good.length}} {{/if}}</th>
      <th>{{#if good.finish}} {{good.finish}} {{/if}}</th>
      <th>{{#if good.comment}} {{good.comment}} {{/if}}</th>
      <th><button {{bind-attr id='good.editId'}} {{action "renderEditGood" good}}>Edit</button></th>
      <th><button {{bind-attr id='good.deleteId'}} {{action "removeGood" good}} class="destroy">Delete</button></th>
    </tr>
    
  {{/each}}
</table>

{{partial "editGood"}}

<h2>Add New Good</h2>

{{view Ember.Select
  content=metalTypes
  value=selectedType
  id='metal-type-input'
}}

<br><br>

{{partial selectedType}}

<br><br>

<button id='add-good' {{action "addGood"}}>Add</button>